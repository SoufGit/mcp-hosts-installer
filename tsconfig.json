{
  "compilerOptions": {
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "pretty": true,
    "target": "ES2022",
    "outDir": "lib",
    "lib": ["ES2022"],
    "moduleDetection": "force"
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "include": ["src/**/*.mts", "src/index.mts"],
  "exclude": ["node_modules", "lib"]
}
